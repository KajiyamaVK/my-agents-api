// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model LlmModels {
  id          Int      @id @default(autoincrement())
  name        String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Contact {
  id             Int      @id @default(autoincrement())
  alias          String?  @unique // Tornado opcional para preenchimento posterior
  whatsappId     String   @unique // No Telegram, guardamos o Chat ID aqui
  age            Int?
  isApproved     Boolean  @default(false)
  onboardingStep String   @default("NONE") // NONE, AWAITING_NAME, AWAITING_AGE
  isMe           Boolean  @default(false)
  createdAt      DateTime @default(now())
}

model Camera {
  id          Int      @id @default(autoincrement())
  name        String   @unique // Ex: "portao"
  frigateName String   // Nome t√©cnico no Frigate
  description String?
}