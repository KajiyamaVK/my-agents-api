meta {
  name: Create Token
  type: http
  seq: 1
}

post {
  url: http://localhost:3000/llm/token
  body: json
  auth: inherit
}

headers {
  Content-Type: application/json
  Accept: application/json
  Authorization: <Authorization>
}

body:json {
  {
    "clientId": "{{flowClientID}}",
    "clientSecret": "{{flowClientSecret}}",
    "appToAccess": "llm-api"
  }
}

settings {
  encodeUrl: true
  timeout: 0
}
